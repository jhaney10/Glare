@page

@model Glare.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout Page</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Order Summary</h3>
            </div>
            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <td>Item</td>
                            <td>Quantity</td>
                            <td>Sub Total</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MyOrder)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@string.Format("{0:C}", item.SubTotal)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <span>TOTAL: @Model.Total</span>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#orderModal">
                    ORDER NOW
                </button>
                <a asp-page="/Cart">Back To Cart</a>
            </div>
        </div>
    </div>

</div>
<!-- Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Enter your Delivery Address</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" />
                    <div class="form-group">
                        <label asp-for="PlaceOrder.DeliveryAddress" class="control-label"></label>
                        <input asp-for="PlaceOrder.DeliveryAddress" class="form-control" />
                        <span asp-validation-for="PlaceOrder.DeliveryAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info">ORDER</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>