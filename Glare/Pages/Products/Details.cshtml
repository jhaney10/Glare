@page
@inject SignInManager<AppUser> signInManager
@model Glare.DetailsModel

@{
    ViewData["Title"] = "Details";
    var ctr = 0;
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-5">
            @if (Model.Product.Photo.Any())
            {
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var item in Model.Product.Photo)
                        {
                            ctr = ctr + 1;
                            @if (ctr == 1)
                            {
                                <div class="carousel-item active">
                                    <img src="~/images/@item.PhotoPath" class="d-block w-100 product__image3 img-fluid" alt="...">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="~/images/@item.PhotoPath" class="d-block w-100 product__image3 img-fluid" alt="...">
                                </div>
                            }

                        }

                    </div>
                </div>
            }
            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
            }
            
        </div>
        <div class="col-md-5">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Category)
                </dd>
            </dl>
            <a class="btn btn-outline-warning" asp-page="/Cart" asp-route-productId="@Model.Product.ProductId">ADD TO CART</a>
        </div>
    </div>
    
</div>

