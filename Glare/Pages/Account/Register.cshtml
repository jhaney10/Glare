@page
@model Glare.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md">
                        <h3>Register</h3>
                    </div>
                </div>
                
                @if (TempData["Message"] != null)
                {
                    <div class="row">
                        <div class="col-md">
                            <span class="alert alert-danger">@TempData["Message"]</span>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <form method="post">
                   
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <div class="form-group">
                        <label asp-for="NewUser.FirstName"></label>
                        <input asp-for="NewUser.FirstName" class="form-control" />
                        <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.LastName"></label>
                        <input asp-for="NewUser.LastName" class="form-control" />
                        <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.Email"></label>
                        <input asp-for="NewUser.Email" class="form-control" id="userEmail" />
                        <span id="emailCheck" class="text-danger"></span><br />
                        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.Password"></label>
                        <input asp-for="NewUser.Password" class="form-control" />
                        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.ConfirmPassword"></label>
                        <input asp-for="NewUser.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-secondary">Register</button>
                </form>

            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("_ValidationScriptsPartial")

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#userEmail").on("keyup", function () {
                var email = $("#userEmail").val();
                $.ajax({
                    url: "/Account/CheckEmail",
                    type: 'GET',
                    data: "email="+email,
                    success: function (data) {
                        if (data == 1) {
                            $("#emailCheck").html("This email already exists");
                        }
                        else {
                            $("#emailCheck").html(" ");
                        }
                        console.log(data);
                       
                    },
                    error: function (err) {
                        console.log(err);
                    }

                });
            })
        });
    </script>
}