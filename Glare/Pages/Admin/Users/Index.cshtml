@page
@model Glare.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="/Account/Register">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaginatedUsers[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaginatedUsers[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaginatedUsers[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaginatedUsers[0].City)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PaginatedUsers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a asp-page="/Admin/Users/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Admin/Users/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/Admin/Users/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>