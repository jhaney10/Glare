@page
@model Glare.CreateRolesModel
@{
    ViewData["Title"] = "CreateRoles";
}

<div class="row">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
           
            <h3>Create Role</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewRole.RoleName"></label>
                    <input asp-for="NewRole.RoleName" class="form-control" />
                    <span asp-validation-for="NewRole.RoleName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-secondary">Register</button>                                               
            </form>

        </div>
    </div>
</div>
</div>
